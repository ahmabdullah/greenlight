<div id="limitless_area">
        <div class="row row_modify">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                        <div class="row">
                                <div class="col-md-6 pl-0">
                                        <div class="demo_img">
                                            <%= image_tag 'img.png' %>
                                        </div>
                                </div>
                                <div class="col-md-6">
                                        <div class="limitless_content">
                                                <h2><%= t("limitless.title") %></h2>
                                                <div class="limitless_sub_content">
                                                        <h6><%= t("limitless.title_options.options_1").html_safe %></h6>
                                                        <p><%= t("limitless.title_desc.options_1").html_safe %></p>
                                                </div>
                                                <div class="limitless_sub_content">
                                                        <h6><%= t("limitless.title_options.options_2").html_safe %></h6>
                                                        <p><%= t("limitless.title_desc.options_2").html_safe %></p>
                                                </div>
                                                <div class="limitless_sub_content">
                                                        <h6><%= t("limitless.title_options.options_3").html_safe %></h6>
                                                        <p><%= t("limitless.title_desc.options_3").html_safe %></p>
                                                </div>
                                                <% unless current_user %>
                                                <button class="limitless_button" onclick="location.href = '<%= signup_path %>';"><i class="fas fa-caret-right"></i><%= t("limitless.join") %></button>
                                                <% end %>
                                        </div>
                                </div>
                        </div>
                </div>
                <div class="col-md-2"></div>
        </div>
</div>

	