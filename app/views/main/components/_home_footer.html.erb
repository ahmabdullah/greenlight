<div id="footer_area">
        <div class="subscriber_area">
                <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                                <div class="row s_main_area">
                                        <div class="col-md-6">
                                                <div class="subscribe_content">
                                                        <h4><%= t("footer.contact.title") %></h4>
                                                        <p><%= t("footer.contact.desc").html_safe %></p>
                                                </div>
                                        </div>
                                        <div class="col-md-6">
                                                <div class="email_area">
                                                    <%= form_tag({:controller => 'main', :action => 'mail_data_save'},:id => 'mail_form', :remote => true) do %>
                                                    <input type="email" name="email" placeholder="<%= t("contact.enter_email") %>">
                                                    <button type="submit"><%= t("footer.contact.send") %></button>
                                                    <%end%>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-md-1"></div>
                </div>
        </div>
        <div class="footer_content_area">
                <div class="row footer_contents">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                                <div class="row footer_content">
                                        <div class="col-12 col-sm-6 col-md-5">
                                                <div class="footer_logo">
                                                        <%= image_tag 'logo.png' %>
                                                        <p><%= t("footer.contact.classlive_title").html_safe %></p>
                                                        <ul>
                                                                <li><a href="https://www.facebook.com/ClassLiveBD" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                                                                <li><a href="https://twitter.com/ClassLiveBD" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                                                <li><a href="https://www.linkedin.com/company/classlive" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                                                        </ul>
                                                </div>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-3">
                                                <div class="footer_menu">
                                                        <h6>Important</h6>
                                                        <ul>
                                                            <% if current_user %>
                                                              <% if current_user.has_role? :super_admin %>
                                                                  <% admins_page = params[:controller] == "admins" && params[:action] == "index" ? "active" : "" %>
                                                                  <li><%= link_to t("header.dropdown.home"), admins_path %></li>
                                                              <% else %>
                                                                  <% rooms_page = params[:controller] == "rooms" && params[:action] == "show" ? "active" : "" %>
                                                                  <li><%= link_to t("header.dropdown.home"), current_user.main_room %></li>
                                                              <% end %>
                                                            <% else %>        
                                                              <li><%= link_to t("header.dropdown.home"), root_path %></li>
                                                            <% end %>
                                                            <li><a href="#features_area"><%= t("header.dropdown.features") %></a></li>
                                                            <li><a href="#price_plan_area"><%= t("header.dropdown.plan_n_price") %></a></li>
                                                            <li><a href="#limitless_area"><%= t("header.dropdown.why_us") %></a></li>
                                                            <li><a href="#contact_area"><%= t("header.dropdown.contact_us") %></a></li>
                                                            <!--li><a href="#"><%#= t("footer.contact.faq").html_safe %></a></li-->
                                                        </ul>
                                                </div>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-4">
                                                <div class="footer_menu">
                                                        <h6>CONNECT</h6>
                                                        <ul>
                                                                <li class="contact_email"><a href="#"><%= t("footer.contact.email") %></a>
                                                                        <p><i class="far fa-envelope"></i> <%= t("footer.contact.email_address") %></p>
                                                                </li>
                                                                <li class="contact_phone"><a href="#"><%= t("footer.contact.phone") %></a>
                                                                        <p><i class="fas fa-phone-alt"></i> <a href="tel:<%= t("footer.contact.phone_1") %>"><%= t("footer.contact.phone_1") %></a></p>
                                                                        <p><i class="fas fa-phone-alt"></i> <a href="tel:<%= t("footer.contact.phone_2") %>"><%= t("footer.contact.phone_2") %></a></p>
                                                                </li>
                                                        </ul>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-md-2"></div>
                </div>
        </div>
</div>
<div class="modal fade" id="email_save_successfully" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
        <div class="card-body p-6">
          <div class="card-title" style='border-bottom: 1px solid #ccc; padding-bottom: 10px; margin-bottom: 10px;'>
            <h3><%= t("modal.save_mail_info.title") %></h3>
          </div>
          <%= t("modal.save_mail_info.desc") %>
        </div>
      </div>
    </div>
  </div>
</div>